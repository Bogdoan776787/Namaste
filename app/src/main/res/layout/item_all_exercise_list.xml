<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_item_exercise">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgAllExercise"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:riv_corner_radius="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_launcher_background"
        android:transitionName="imageMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAllExerciseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="1"
        android:text="CORPSE POSE"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAllExercise"
        app:layout_constraintTop_toTopOf="@+id/imgAllExercise" />

    <TextView
        android:id="@+id/tvAllExerciseDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:letterSpacing="0.08"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="2"
        android:text="Lie on your back with your legs straight and arms at your sides"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgAllExercise"
        app:layout_constraintEnd_toEndOf="@+id/tvAllExerciseName"
        app:layout_constraintStart_toStartOf="@+id/tvAllExerciseName"
        app:layout_constraintTop_toBottomOf="@+id/tvAllExerciseName" />

</androidx.constraintlayout.widget.ConstraintLayout>